<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circular_photo">
        <item name="cornerSize">50%</item>
    </style>

    <style name="edittext">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="textview_signin">
        <item name="android:textColor">@color/darkblue</item>
    </style>

    <style name="edittext_cardview">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/cardview_text_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="white_button">
        <item name="background">@color/white</item>
    </style>

    <style name="image_background_button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardBackgroundColor">@color/cardview_background</item>
    </style>
</resources>